{
  // Python ファイル用の設定
  "[python]": {
    // VS Code のフォーマッターとして Black Formatter 拡張を使う
    "editor.defaultFormatter": "ms-python.black-formatter",
    // ファイル保存時に自動でフォーマットする
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    }
  },
  "isort.args": [
    "--profile",
    "black"
  ]
}
